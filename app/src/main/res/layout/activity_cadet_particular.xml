<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadetParticularActivity"
    android:id="@+id/drawerLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <include
        layout="@layout/navigation_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/main_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#09a3db"
                android:padding="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"

                    android:clickable="true"
                    app:civ_border_width="3dp"
                    app:civ_border_color="#FFFFFFFF"

                    android:id="@+id/profile"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:padding="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />

                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="130dp"
                    android:layout_marginTop="130dp"
                    android:layout_alignTop="@id/profile"
                    android:clickable="true"
                    android:src="@drawable/camera"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Demo Version"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/edit"/>
                    <TextView
                        android:id="@+id/tv_dept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/tv_name"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_birth_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Date of Birth :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    />
                <TextView
                    android:id="@+id/tv_birth_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Place of Birth :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_st_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Home Address :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Height :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Weight :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_blood_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Blood Type :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_marks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Distinguishing Marks:"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_nationality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Nationality :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_passport_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Passport No. :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_passport_no_issue_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Passport Issue Date :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/tv_srn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="SRN :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/tv_sid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="SID No. :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/tv_srb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="SRB No.:"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/tv_srb_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="SRB Date of Issue:"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />


                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Mobile :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="E-mail :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />


                <TextView
                    android:id="@+id/tv_company_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Company :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_school_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="School :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_emergency_contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Next of Kin Name :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_emergency_contact_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Next of Kin Contact No. :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_emergency_relationship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Next of Kin Relationship :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp" />
                <TextView
                    android:id="@+id/tv_emergency_contact_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Next of Kin Address :"
                    android:textColor="@color/black"
                    android:background="@drawable/border_circular"
                    android:layout_marginTop="10dp" />

                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/main_menu_deck"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        android:id="@+id/navigation_view">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>